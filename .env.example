# ===================================
# Financial Wallet - Environment Variables
# Development Configuration
# ===================================

# System (for Docker user permissions)
UID=1000
GID=1000

# Application
APP_ENV=local
APP_DEBUG=true
APP_NAME="Financial Wallet"
APP_URL=http://localhost:8000

# Database (PostgreSQL 16)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=financial_wallet
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000
SWAGGER_PORT=8080

# Frontend API URL
VITE_API_URL=http://localhost:8000

# Session & Cache
SESSION_DRIVER=file
CACHE_DRIVER=file
QUEUE_CONNECTION=sync

# Mail (configure for production)
MAIL_MAILER=log
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@financialwallet.com"
MAIL_FROM_NAME="${APP_NAME}"
