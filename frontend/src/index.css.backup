@import url('https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;500;600;700&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  * {
    @apply border-gray-200;
  }
  
  body {
    @apply bg-gray-50 text-gray-900 font-sans antialiased;
  }
}

@layer components {
  .btn-primary {
    @apply bg-gradient-to-r from-[#003161] to-[#3D58B6] text-white font-semibold px-6 py-3 rounded-card 
           transition-all duration-300 ease-elastic hover:shadow-lg hover:scale-105 
           active:scale-95 disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:scale-100;
  }
  
  .btn-secondary {
    @apply bg-gradient-to-r from-[#00610D] to-[#70E080] text-white font-semibold px-6 py-3 rounded-card 
           transition-all duration-300 ease-elastic hover:shadow-lg hover:scale-105 
           active:scale-95 disabled:opacity-50 disabled:cursor-not-allowed;
  }
  
  .btn-outline {
    @apply border-2 border-[#003161] text-[#003161] font-semibold px-6 py-3 rounded-card 
           transition-all duration-300 ease-elastic hover:bg-[#003161] hover:text-white 
           active:scale-95 disabled:opacity-50 disabled:cursor-not-allowed;
  }
  
  .input-field {
    @apply w-full px-4 py-3 rounded-card border-2 border-[#B3B6CA] 
           focus:border-[#3D58B6] focus:ring-2 focus:ring-[#3D58B6]/20 outline-none 
           transition-all duration-200 disabled:bg-gray-100 disabled:cursor-not-allowed;
  }
  
  .card {
    @apply bg-white rounded-modal shadow-card p-6 transition-all duration-300;
  }
  
  .gradient-primary {
    @apply bg-gradient-to-br from-[#003161] via-[#3D58B6] to-[#001F3D];
  }
  
  .gradient-success {
    @apply bg-gradient-to-r from-[#00610D] to-[#70E080];
  }
  
  .gradient-accent {
    @apply bg-gradient-to-r from-[#DAB655] to-[#B89640];
  }
  
  .gradient-text {
    @apply bg-gradient-to-r from-[#003161] to-[#3D58B6] bg-clip-text text-transparent;
  }
}

/* Dark Mode Styles */
.dark {
  color-scheme: dark;
}

.dark body {
  background-color: rgb(17 24 39);
  color: rgb(243 244 246);
}

.dark .bg-white {
  background-color: rgb(31 41 55);
  color: rgb(243 244 246);
}

.dark .bg-gray-50 {
  background-color: rgb(17 24 39);
}

.dark .bg-gray-100 {
  background-color: rgb(31 41 55);
}

.dark .text-gray-900 {
  color: rgb(243 244 246);
}

.dark .text-gray-700 {
  color: rgb(209 213 219);
}

.dark .text-gray-600 {
  color: rgb(156 163 175);
}

.dark .border-gray-200 {
  border-color: rgb(55 65 81);
}

.dark .border-gray-300 {
  border-color: rgb(75 85 99);
}

.dark .card {
  background-color: rgb(31 41 55);
  box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.5), 0 8px 10px -6px rgb(0 0 0 / 0.5);
}

.dark input,
.dark select,
.dark textarea {
  background-color: rgb(55 65 81);
  color: rgb(243 244 246);
  border-color: rgb(75 85 99);
}

.dark input:disabled,
.dark select:disabled,
.dark textarea:disabled {
  background-color: rgb(17 24 39);
  color: rgb(107 114 128);
}

/* ===================================
   HIGH CONTRAST MODE (LIGHT)
   Based on WCAG AAA standards (7:1 ratio)
   Refined for better UX/UI
   =================================== */
.high-contrast {
  /* Semantic colors with excellent contrast */
  --hc-primary: #003366;        /* Navy blue: 12.6:1 */
  --hc-success: #006B00;        /* Forest green: 8.1:1 */
  --hc-danger: #A00000;         /* Deep red: 8.2:1 */
  --hc-warning: #8B6914;        /* Dark gold: 7.2:1 */
  --hc-info: #004C8C;           /* Ocean blue: 9.1:1 */
}

/* Base styles - Light High Contrast */
.high-contrast body {
  background-color: #F8F9FA !important;
  color: #1a1a1a !important;
  font-weight: 500;
}

.high-contrast .bg-white {
  background-color: #FFFFFF !important;
  color: #1a1a1a !important;
}

.high-contrast .bg-gray-50 {
  background-color: #F8F9FA !important;
  color: #1a1a1a !important;
}

.high-contrast .bg-gray-100 {
  background-color: #F0F0F0 !important;
  color: #1a1a1a !important;
}

.high-contrast .text-gray-900,
.high-contrast .text-gray-800,
.high-contrast .text-gray-700 {
  color: #1a1a1a !important;
  font-weight: 600;
}

.high-contrast .text-gray-600,
.high-contrast .text-gray-500 {
  color: #2d2d2d !important;
  font-weight: 600;
}

.high-contrast .text-gray-400 {
  color: #404040 !important;
  font-weight: 600;
}

/* Cards and containers */
.high-contrast .card {
  background-color: #FFFFFF !important;
  border: none !important;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.25), 0 1px 3px rgba(0, 0, 0, 0.15) !important;
}

/* Buttons - Refined and accessible */
.high-contrast button,
.high-contrast .btn-primary,
.high-contrast .btn-secondary {
  font-weight: 600 !important;
  border: none !important;
  background-color: #003366 !important;
  color: #FFFFFF !important;
  padding: 0.75rem 1.5rem !important;
}

.high-contrast button:hover,
.high-contrast .btn-primary:hover,
.high-contrast .btn-secondary:hover {
  background-color: #00509E !important;
  border: none !important;
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(0, 51, 102, 0.4) !important;
}

.high-contrast .btn-outline {
  background-color: #FFFFFF !important;
  color: #003366 !important;
  border: 1px solid #003366 !important;
}

.high-contrast .btn-outline:hover {
  background-color: #003366 !important;
  color: #FFFFFF !important;
  border: 1px solid #003366 !important;
}

/* Tab buttons */
.high-contrast .bg-primary.text-white {
  background-color: #003366 !important;
  border: none !important;
}

.high-contrast .bg-white.text-gray-600 {
  background-color: #FFFFFF !important;
  color: #1a1a1a !important;
  border: none !important;
}

.high-contrast .bg-white.text-gray-600:hover {
  background-color: #F0F0F0 !important;
  border: none !important;
}

/* Links - Clear but not overwhelming */
.high-contrast a {
  color: #003366 !important;
  font-weight: 600 !important;
  text-decoration: underline !important;
  text-decoration-thickness: 1.5px !important;
  text-underline-offset: 3px !important;
}

.high-contrast a:hover {
  color: #00509E !important;
  text-decoration-thickness: 2px !important;
}

/* Inputs - Clean and accessible */
.high-contrast input,
.high-contrast select,
.high-contrast textarea {
  background-color: #FFFFFF !important;
  color: #1a1a1a !important;
  border: 1px solid #9E9E9E !important;
